def perfectnumber():
    n = int(input("Enter a Number :"))
    sum = 0
    l = []
    for i in range(1, n):
        if n % i == 0:
            sum += i
            l.append(i)
    if sum == n:
        print("Perfect Number")
        print("Divisors :", l)
    else:
        print("Not a Perfect Number")
perfectnumber()
