def evennumber():
    n = int(input("Enter a number :"))
    for i in range(1, n + 1):
        if i % 2 == 0:
            print(i)
evennumber()

def oddnumber():
    n = int(input("Enter a number :"))
    sum = 0
    for i in range(1, n + 1):
        if i % 2 != 0:
            print(i)
            sum += i
    print("Sum :",sum)
oddnumber()
